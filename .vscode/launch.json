    "version": "0.2.0",
    "configurations": [
        {
            "name": "HangMan",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "PyServer",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["-log", "-m", "server"]
        },
        {
            "name": "PyClient",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["-log", "-m", "client"]
        },
        {
          "name": "PyClient -t",
          "type": "python",
          "request": "launch",
          "program": "${file}",
          "console": "integratedTerminal",
          "args": ["-log", "-t","-m", "client"]
        },
        {
          "name": "PyServer -t",
          "type": "python",
          "request": "launch",
          "program": "${file}",
          "console": "integratedTerminal",
          "args": ["-log", "-t","-m", "server"]
        }
    ],
    "compounds": [
      {
        "name": "PyServer/PyClient",
        "configurations": ["PyServer", "PyClient"]
      }
    ]
}